doctype html
html
  head
    meta(charset='UTF-8')
    title Sign-Up/Login Form
    //- link(href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600', rel='stylesheet', type='text/css')
    //- link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css')
    link(rel='stylesheet', href='css/style.css')
  body
    .form
      ul.tab-group
        li.tab.active
          a(href='#login') Log In
        li.tab
          a(href='#signup') Sign Up
      .tab-content

        #login
          h1 Log In Here !
          form(action='/check', method='post')
            .field-wrap
              label
                | Email Address
                span.req *
              input(type='email',name='email1',  required='', autocomplete='off')
            .field-wrap
              label
                | Password
                span.req *
              input(type='password',name='password1',  required='', autocomplete='off')
            button.button.button-block Log In

        #signup
          h1 Sign Up for Free
          form(action='/insert', method='post')
            .top-row
              .field-wrap
                label
                  | First Name
                  span.req *
                input(type='text', name='first_name', required='', autocomplete='off')
              .field-wrap
                label
                  | Last Name
                  span.req *
                input(type='text', name='last_name', required='', autocomplete='off')
            .field-wrap
              label
                | Email Address
                span.req *
              input(type='email', name='email', required='', autocomplete='off')
            .field-wrap
              label
                | Set A Password
                span.req *
              input(type='password', name='password', required='', autocomplete='off')

            button.button.button-block(type='submit') Get Started
      //- // tab-content
    //- // /form
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='js/index.js')
